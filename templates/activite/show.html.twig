{% extends 'layout.html.twig' %}

{% block title %}Détail d'une activité{% endblock %}

{% block body %}
    <h1>Activite</h1>
<div class="card">
    <div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id activite</th>
                <td>{{ activite.idActivite }}</td>
            </tr>
            <tr>
                <th>DescreptionActivite</th>
                <td>{{ activite.DescreptionActivite }}</td>
            </tr>
            <tr>
                <th>PrixActivite</th>
                <td>{{ activite.PrixActivite }}</td>
            </tr>
            <tr>
                <th>Centre</th>
                <td>{{ activite.Centre.nomCentre }}</td>
            </tr>

        </tbody>
    </table>

    {{ include('activite/_delete_form.html.twig') }}
        <a type = "button" href="{{ path('activite_index') }}">Liste des activités</a>

    </div>
</div>

        {% endblock %}
