{% extends 'layout.html.twig' %}


{% block body %}
    <h1>Détails de centre:{{ centre.nomCentre }}</h1>


    <div class="row">
        <!-- Column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    =                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-6">
                            <div class="white-box text-center"><img src="{{ asset('uploads/')~centre.photoCentre }}"
                                                                    class="img-responsive"></div>
                        </div>
                        <div class="col-lg-9 col-md-9 col-sm-6">
                            <h4 class="box-title m-t-40">centre description</h4>
                            <p>{{ centre.descriptionCentre }}</p>
                            <h2 class="m-t-40">{{ centre.prixCentre }}<small class="text-success"> DT</small></h2>
                            <div class="col-md-6 col-sm-6">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <h3 class="box-title m-t-40">Informations Générales</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ centre.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Nom centre</th>
                                        <td>{{ centre.nomCentre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Owner</th>
                                        <td>{{ centre.owner }}</td>
                                    </tr>
                                    <tr>
                                        <th>Adresse</th>
                                        <td>{{ centre.adresse }}</td>
                                    </tr>
                                    <tr>
                                        <td>commentaires</td>
                                    </tr>
                                    {% for centre in centre.centreComments %}
                                        <tr>
                                            <td>
                                                {{ centre.user.username }} :
                                                {{ centre.contenu }}
                                            </td>
                                        </tr>
                                    {% else %}

                                    {% endfor %}



                                    </tbody>
                                </table>
                                {{ include('centre/_delete_form.html.twig') }}
                                <a href="{{ path('centre_editA', {'id': centre.id}) }}" class="btn btn-success"> <i class="fa fa-check"></i>Modifier</a>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>

    <a href="{{ path('centre_index') }}">Liste des centres</a>


{% endblock %}

