{% extends 'layout.html.twig' %}


{% block body %}


    <!--====== App ======-->
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <h1>Liste des reservations</h1>
    <div class="col-lg-9 col-md-12">
        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
            <div class="dash__pad-2">
                <div class="dash__address-header">
                    <h1 class="dash__h1">Reservation</h1>
                    <div>


            </div>
        </div>

                <table class="dash__table">
                    <thead>
                    <tr>
                        <th>Client</th>
                        <th>Centre</th>
                        <th>Evenement</th>
                        <th>Qrcode</th>
                        <th>Action</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for reservation in reservations %}
                        {% if reservation.client.Username == app.user.Username %}
                        <tr>
                            <td>{{ reservation.client.Username }}</td>
                            <td>{{ reservation.Centre.nomCentre }}</td>
                            <td>{{ reservation.Evenement.descrptionEvent }}</td>

                            <td>
                               <img src="{{ reservation.Qrcode }}" style="width: 100px;height: 100px">
                            </td>
                            <td>
                                <form method="post" action="{{ path('reservation_deleteA', {'id': reservation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                    <button class="btn waves-effect waves-light btn-danger">Delete</button>
                                </form>

                            </td>
                        </tr>
                        {% endif %}
                    {% else %}
                        <tr>
                            <td colspan="2">non reservation trouvez</td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

            <table class="table" >
                <thead>
                <tr>

                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>

            <a href="{{ path('reservation_new') }}" type="button" class="btn btn-info "><i
                        class="fa fa-plus-circle"></i> Ajouter une reservation</a>



            <a href="{{ path('genPdf') }}" type="button" class="btn btn-success"><i
                        class="fa fa-check"></i>  Telecharger Pdf </a>


{% endblock %}

