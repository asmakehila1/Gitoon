{% extends 'layout.html.twig' %}


{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Client</th>
                <th>Centre</th>
                <th>Evenement</th>
                <th>Materiels</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.Client.nom }}</td>
                <td>{{ reservation.Centre.nomCentre }}</td>
                <td>{{ reservation.Evenement.descrptionEvent }}</td>
                <td>{{ reservation.Materiels.NomMat }}</td>

                <td>
                    <a href="{{ path('reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">non reservation trouvez</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservation_new') }}">passer reservation</a>
{% endblock %}
