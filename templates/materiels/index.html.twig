{% extends 'layout.html.twig' %}

{% block title %}Materiel index{% endblock %}

{% block body %}
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Materiels</li>
            </ol>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">

                <a href="{{ path('add_materiel') }}" type="button" class="btn btn-info "><i
                            class="fa fa-plus-circle"></i> Ajouter</a>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Column -->
        <div class="col-lg-12">


            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table product-overview" id="myTable">
                            <thead>
                            <tr>
                                <th>id</th>
                                <th>Nom</th>
                                <th>Prix</th>
                                <th>Quantité</th>
                                <th>Status</th>
                                <th>duree</th>
                                <th>photo</th>

                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for materiel in materiels %}
                                <tr>
                                    <td>{{ materiel.id }}</td>
                                    <td>{{ materiel.Nom }}</td>
                                    <td>{{ materiel.prix }}</td>
                                    <td>{{ materiel.quantite }}</td>
                                    <td> {% if materiel.statu == 1 %}
                                        Activé
                                        {% else %}
                                         Désactivé
                                        {% endif %}
                                    </td>
                                      <td>{{ materiel.dureeLocation }}</td>
                                    <td>{{ materiel.photo }}</td>
                                    <td>
                                        <a href="{{ path('materiel_edit', { 'id':  materiel.id }) }}"
                                           class="text-inverse p-r-10" data-toggle="tooltip" title="Editer"><i
                                                    class="ti-marker-alt"></i></a>
                                        {{ include('materiels/_delete_material_form.html.twig') }}
                                    </td>
                                </tr>
                            {% endfor %}x
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>


{% endblock %}
