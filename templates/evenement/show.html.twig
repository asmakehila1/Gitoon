{% extends 'layout.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Prix_event</th>
                <td>{{ evenement.prixEvent }}</td>
            </tr>
            <tr>
                <th>Date Debut</th>
                <td>{{ evenement.date_debut|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Date Fin</th>
                <td>{{ evenement.date_fin|date("d/m/Y") }}</td>
            </tr>
            <tr>
                <th>Descrption_event</th>
                <td>{{ evenement.descrptionEvent }}</td>
            </tr>
            <tr>
                <th>Photo_event</th>
                <td><img src ="{{ asset('uploads/images/' ~ evenement.photoEvent) }}"
                         alt =""  width="100" height="100"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evenement_index') }}">back to list</a>

    <a href="{{ path('evenement_edit', {'id': evenement.id}) }}">edit</a>

