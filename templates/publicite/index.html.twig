{% extends 'layout.html.twig' %}

{% block title %}Publicite {% endblock %}

{% block body %}
    <h1>Publicité </h1>

    <div class="row page-titles">
    <div class="d-flex justify-content-end align-items-center">

            <a href="{{ path('publicite_new') }}" type="button" class="btn btn-info "><i
                        class="fa fa-plus-circle"></i>  Ajouter </a>
    </div>
    </div>

    <div class="row">
        <!-- Column -->
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table product-overview" id="myTable">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre_pub</th>
                                <th>Description_pub</th>
                                <th>Image_pub</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for publicite in publicites %}
                                <tr>
                                    <td>{{ publicite.id }}</td>
                                    <td>{{ publicite.titrePub }}</td>
                                    <td>{{ publicite.descriptionPub }}</td>
                                    <td><img src="{{ asset('uploads/')~publicite.imagePub }}" alt="imgpub" ></td>
                                    <!-- CHECK IMAGE BUG -->
                                    <td><a href="{{ path('publicite_show', { 'id':  publicite.id }) }}"
                                           title="Afficher" data-toggle="tooltip"><i class="ti-eye"></i></a>
                                        <a href="{{ path('publicite_edit', { 'id':  publicite.id }) }}"
                                           title="Modifier"  data-toggle="tooltip"  ><i class="ti-marker-alt"></i></a>
                                        <a href="{{ path('publicite_delete', { 'id':  publicite.id }) }}"
                                           title="Supprimer" data-toggle="tooltip"  ><i class="ti-marker-alt"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">Pas de publicité !</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Column -->
    </div>
{% endblock %}
