{% extends 'layout.html.twig' %}

{% block title %}Nouvelle Publicité{% endblock %}

{% block body %}
    <h1>Modifier Publicité</h1>

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="{{ path('publicite_index') }}">Publicité</a></li>
                <li class="breadcrumb-item active"><a href="{{ path('publicite_new') }}">Modifier</a></li>
            </ol>
        </div>
        <div class="col-md-7 align-self-center text-right">
            <div class="d-flex justify-content-end align-items-center">

                <a href="{{ path('publicite_new') }}"  type="button" class="btn btn-info "><i class="fa fa-plus-circle"></i> Ajouter</a>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Modifiez Votre Publicité</h4>
                    <form method="post"  enctype="multipart/form-data">
                        {{ form_start(form) }}

                        <div class="form-group ">
                            <label for="adr"  class="control-label">Titre de la publicité</label>
                            <input class="form-control" type="text" name="titre_pub"  value="{{publicite.titrePub}}" minlength="4" maxlength="50" required>
                        </div>
                        <div class="form-group ">
                            <label for="desc"  class="control-label">Description de la publicité</label>
                            <textarea class="form-control"   rows="4" name="description_pub" minlength="4" maxlength="300" required >{{publicite.descriptionPub}}</textarea>
                        </div>

                        <div class="form-group ">

                            <label for="ph" class="control-label">Image de la publicité</label>
                            <input type="file" id="ph" class="dropify" data-show-remove="false" data-default-file="{{ asset('uploads/')~publicite.imagePub }}" name="image_pub" accept="image/x-png,image/gif,image/jpeg" />

                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i>Modifier</button>
                            <a type="button" class="btn btn-secondary" href="{{ path('publicite_index') }}">Annuler</a>
                        </div>
                        {{ form_end (form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">

            <ol class="breadcrumb">

                <a href="{{ path('publicite_index') }}">Retour à la liste</a>

            </ol>
        </div>
    </div>

{% endblock %}
